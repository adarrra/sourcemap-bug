html, *
  box-sizing: border-box

body
  font-size: 16px
  color: #727272


.nav-parent
  background-color: #F8F8F8
  display: flex
  flex-wrap: wrap
  border-color: #e7e7e7
  position: fixed
  min-height: 40px
  width: 100%
  padding-right: 15px
  padding-left:15px
  justify-content: space-between
  align-items: center

.left-side
  display: flex
  align-items: center

.logo
  width:180px

.logo img
  filter: blur(3px)
  max-width:100%
  margin: auto

.second-level
  flex-grow:1

.nav-list
    margin: 0
    list-style: none
    padding-left: 0
    margin-left: 70px

.nav-list li
  display: inline-block
  padding: 10px 15px

.left-side
  margin-right: 70px

.second-level .nav-list
    margin: 0

.second-level .nav-list li:first-child
     padding-left: 0

.container
  display: flex
  height: 100vh

.img-placeholder
  display: flex
  margin:auto auto
  width: 400px
  height: 245px
  background-color: #E9E9E9
  border: 2px dashed #bbb
  border-radius: 6px
  color: #888
  cursor: pointer
  text-align: center
  text-shadow: 0 1px 1px #fff
  transition: all 0.3s ease

.img-placeholder:hover
  background: #DADADA

  border-color: #888
  color: #5f5f5f
  text-shadow: none

.placeholder-center
  margin: auto auto
  position: relative

.placeholder-add-btn
  margin: auto auto
  background: #ececec
  border: 1px solid #cfcfcf
  border-radius: 50%
  width: 44px
  height: 44px
  display: block
  box-shadow: 0 0 2px #fff inset

.placeholder-add-btn:after
  bottom: 0
  left: 0
  right: 0
  color: #b5b5b5
  content: '+'
  display: block
  font-family: sans-serif
  font-size: 33px
  line-height: 33px
  position: absolute
  top: 6px
  text-align: center
